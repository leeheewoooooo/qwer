<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8faec"
    android:orientation="vertical">

    <!-- 회원가입 헤더 -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="20px"
        android:paddingBottom="20px">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- 아이디, 이름, 비밀번호, 비밀번호 확인 입력 -->
    <LinearLayout
        android:id="@+id/regist_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#f8faec"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="40px"
        android:paddingBottom="0px">

        <LinearLayout
            android:id="@+id/regist_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="50px">

            <LinearLayout
                android:id="@+id/regist_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/regist_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30px"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:text="이메일:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/regist_id_edittext"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:background="@drawable/regist_textbox"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/regist_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="50px">

            <LinearLayout
                android:id="@+id/regist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/regist_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30px"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="이름:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/regist_name_edittext"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:background="@drawable/regist_textbox"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/regist_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="50px">

            <LinearLayout
                android:id="@+id/regist_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/regist_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30px"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="비밀번호:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/regist_password_edittext"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:background="@drawable/regist_textbox"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/regist_return_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="50px">

            <LinearLayout
                android:id="@+id/regist_return_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/regist_return_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30px"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:text="비밀번호 힌트:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/regist_return_password_edittext"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:background="@drawable/regist_textbox"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/regist_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="30px">

            <LinearLayout
                android:id="@+id/regist_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/regist_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30px"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="휴대폰 번호:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/regist_phone_edittext"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:background="@drawable/regist_textbox"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/regist_birth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="30px">

            <LinearLayout
                android:id="@+id/regist_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/regist_birth_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30px"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="생년월일:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/regist_birth_edittext"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:background="@drawable/regist_textbox"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!-- 약관 동의 -->
    <LinearLayout
        android:id="@+id/agree_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#f8faec"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingStart="130px"
        android:paddingTop="0px"
        android:paddingBottom="50px">

        <!-- 모두 동의합니다 -->
        <LinearLayout
            android:id="@+id/agree1_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">

            <CheckBox
                android:id="@+id/agree1_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/agree1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="모두 동의합니다."
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree2_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingStart="20px">

            <CheckBox
                android:id="@+id/agree2_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/agree2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="이용약관 동의"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree3_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingStart="20px">

            <CheckBox
                android:id="@+id/agree3_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/agree3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="개인정보 취급방식 동의"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree4_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingStart="20px">

            <CheckBox
                android:id="@+id/agree4_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000" />

            <TextView
                android:id="@+id/agree4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="마케팅 정보 수신 동의"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/regist_button_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="bottom"
        android:background="#f8faec"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30px"
        android:paddingBottom="20px">

        <android.widget.Button
            android:id="@+id/regist_button"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:background="@drawable/regist_bt"
            android:text="가입하기"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>